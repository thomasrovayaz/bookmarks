{
    "semi": true,
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 4,
    "useTabs": false,
    "trailingComma": "all",
    "bracketSpacing": true,
    "bracketSameLine": true,
    "endOfLine": "lf",
    "arrowParens": "avoid",
    "overrides": [
        {
            "files": [
                "**/*.test.js",
                "**/*.spec.js"
            ],
            "options": {
                "printWidth": 120
            }
        }
    ]
}
